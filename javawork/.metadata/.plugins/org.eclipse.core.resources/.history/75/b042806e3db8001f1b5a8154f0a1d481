package day1212;

import java.util.Scanner;

public class Ex7Scanner {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in); // 키보드로부터 입력
		
		String word;
		System.out.println("문장을 입력해보세요");
//		word=sc.next(); // 한 단어만 문자열로 읽어온다
//		System.out.println("내가 입력한 단어는 \""+word+"\"입니다.");
		
		word=sc.nextLine(); // 엔터를 누르면 그 한 줄을 통채로 읽어온다
		System.out.println("내가 입력한 단어는 \""+word+"\"입니다.");

	}

}
